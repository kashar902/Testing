# Blood Connect Backend - Environment Variables Example
# Copy this file to .env and update with your actual values
# Never commit the .env file to version control!

# Application Environment
ASPNETCORE_ENVIRONMENT=Production

# Database Configuration
SA_PASSWORD=YourStrong@Password123
DB_SERVER=sqlserver
DB_NAME=BloodConnectDB
DB_USER=sa
CONNECTION_STRING=Server=${DB_SERVER},1433;Database=${DB_NAME};User Id=${DB_USER};Password=${SA_PASSWORD};TrustServerCertificate=true;

# JWT Configuration
# IMPORTANT: Generate a secure random string (minimum 32 characters) for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ISSUER=BloodConnectAPI
JWT_AUDIENCE=BloodConnectClient
JWT_EXPIRY_MINUTES=60

# CORS Configuration
# Add your frontend URLs separated by commas
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# API Port Configuration
API_PORT=5000

# SQL Server Port Configuration
SQL_PORT=1433
